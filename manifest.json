{
  "manifest_version": 3,
  "name": "Auto Social Media Automation",
  "version": "1.0.0",
  "description": "Tự động hóa các thao tác trên mạng xã hội: like, comment, tìm kiếm kết bạn",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "proxy",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://m.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

